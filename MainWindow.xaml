<Window x:Class="ClockScreensaver.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Striped Clock" 
	WindowStyle="None" 
	WindowState="Maximized" 
	Cursor="None">

	<Grid>
		<!-- Background Gradient Layer -->
		<Rectangle Grid.ColumnSpan="8" Panel.ZIndex="0">
			<Rectangle.Fill>
				<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
					<GradientStop Color="#226e6e" Offset="0.0"/>
					<GradientStop Color="#6ad4d4" Offset="1.0"/>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>

		<!-- Content Layer (ZIndex > 0) -->
		<Grid Panel.ZIndex="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1.2*" />
				<ColumnDefinition Width="1.2*" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="1.2*" />
				<ColumnDefinition Width="1.2*" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="1.2*" />
				<ColumnDefinition Width="1.2*" />
			</Grid.ColumnDefinitions>

			<!-- Repeatable Strip Template -->
			<!-- HourTens -->
			<Grid Grid.Column="0" VerticalAlignment="Center" ClipToBounds="True">
				<StackPanel x:Name="HourTens" RenderTransformOrigin="0.5,0.5">
					<StackPanel.RenderTransform>
						<TranslateTransform x:Name="HourTensTransform" />
					</StackPanel.RenderTransform>
				</StackPanel>
				<Border Width="92" Height="92" CornerRadius="50"
					BorderBrush="White" BorderThickness="2"
					HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10, 0, 0"
					Background="#33000000" />
			</Grid>

			<!-- HourOnes -->
			<Grid Grid.Column="1" VerticalAlignment="Center" ClipToBounds="True">
				<StackPanel x:Name="HourOnes" RenderTransformOrigin="0.5,0.5">
					<StackPanel.RenderTransform>
						<TranslateTransform x:Name="HourOnesTransform" />
					</StackPanel.RenderTransform>
				</StackPanel>
				<Border Width="92" Height="92" CornerRadius="50"
					BorderBrush="White" BorderThickness="2"
					HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10, 0, 0"
					Background="#33000000" />
			</Grid>

			<TextBlock Grid.Column="2" Text=":" Foreground="White" FontSize="80" 
				VerticalAlignment="Center" HorizontalAlignment="Center"/>

			<!-- MinuteTens -->
			<Grid Grid.Column="3" VerticalAlignment="Center" ClipToBounds="True">
				<StackPanel x:Name="MinuteTens" RenderTransformOrigin="0.5,0.5">
					<StackPanel.RenderTransform>
						<TranslateTransform x:Name="MinuteTensTransform" />
					</StackPanel.RenderTransform>
				</StackPanel>
				<Border Width="92" Height="92" CornerRadius="50"
					BorderBrush="White" BorderThickness="2"
					HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10, 0, 0"
					Background="#33000000" />
			</Grid>

			<!-- MinuteOnes -->
			<Grid Grid.Column="4" VerticalAlignment="Center" ClipToBounds="True">
				<StackPanel x:Name="MinuteOnes" RenderTransformOrigin="0.5,0.5">
					<StackPanel.RenderTransform>
						<TranslateTransform x:Name="MinuteOnesTransform" />
					</StackPanel.RenderTransform>
				</StackPanel>
				<Border Width="92" Height="92" CornerRadius="50"
					BorderBrush="White" BorderThickness="2"
					HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10, 0, 0"
					Background="#33000000" />
			</Grid>

			<TextBlock Grid.Column="5" Text=":" Foreground="White" FontSize="80" 
				VerticalAlignment="Center" HorizontalAlignment="Center"/>

			<!-- SecondTens -->
			<Grid Grid.Column="6" VerticalAlignment="Center" ClipToBounds="True">
				<StackPanel x:Name="SecondTens" RenderTransformOrigin="0.5,0.5">
					<StackPanel.RenderTransform>
						<TranslateTransform x:Name="SecondTensTransform" />
					</StackPanel.RenderTransform>
				</StackPanel>
				<Border Width="92" Height="92" CornerRadius="50"
					BorderBrush="White" BorderThickness="2"
					HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10, 0, 0"
					Background="#33000000" />
			</Grid>

			<!-- SecondOnes -->
			<Grid Grid.Column="7" VerticalAlignment="Center" ClipToBounds="True">
				<StackPanel x:Name="SecondOnes" RenderTransformOrigin="0.5,0.5">
					<StackPanel.RenderTransform>
						<TranslateTransform x:Name="SecondOnesTransform" />
					</StackPanel.RenderTransform>
				</StackPanel>
				<Border Width="92" Height="92" CornerRadius="50"
					BorderBrush="White" BorderThickness="2"
					HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10, 0, 0"
					Background="#33000000" />
			</Grid>
		</Grid>
	</Grid>
</Window>
